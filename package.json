{
  "name": "modern-api-testing-framework",
  "version": "1.0.0",
  "type": "module",
  "description": "Modern API testing framework with Playwright",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:api": "playwright test tests/api/",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:dev": "NODE_ENV=dev playwright test",
    "test:staging": "NODE_ENV=staging playwright test",
    "test:prod": "NODE_ENV=prod playwright test",
    "test:performance": "playwright test tests/performance/",
    "generate:report": "allure generate allure-results --clean",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "code:check": "npm run lint && npm run format:check",
    "code:fix": "npm run lint:fix && npm run format",
    "setup:env": "copy env.example .env",
    "prepare": "husky"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@playwright/test": "^1.40.0",
    "ajv": "^8.12.0",
    "allure-playwright": "^2.10.0",
    "dotenv": "^16.3.1",
    "faker": "^6.6.6"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript": "^5.2.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
